{{define "index"}}

<html>
<head></head>
<body>

<div style="height:25%;">
    <form method="POST">
        <textarea name="sql" style="width:100%;height:80%;">{{if .}}{{.Query}}{{end}}</textarea>
        <br/>
        <input type="submit" value="Execute" formaction="/execute">
    </form>
</div>

<div>
    {{if .}}
        {{if .Results.Error}}
            Error: {{.Results.Error}}
        {{else}}
            <table>
                {{range .Results.Columns}}
                    <th>{{.}}</th>
                {{end}}
                {{range .Results.Data}}
                    <tr>
                    {{range .}}
                        <td>{{.}}</td>
                    {{end}}
                    </tr>
                {{end}}
            </table>
        {{end}}
    {{end}}
</div>

</body>
</html>

{{end}}